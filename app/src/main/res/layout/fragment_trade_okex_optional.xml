<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_optional_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/tv_add_optional_normal"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/add_optional_coin"
        android:gravity="center_vertical"
        android:text="@string/add_optional"
        android:textColor="@color/blue"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_add_optional"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/future_trade_bg_blue_20dp"
        android:gravity="center"
        android:text="@string/add_optional_nospace"
        android:textColor="@color/white"
        android:visibility="gone" />
</LinearLayout>
