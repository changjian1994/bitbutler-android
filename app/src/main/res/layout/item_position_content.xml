<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/btc_coin" />

        <TextView
            android:id="@+id/tv_root_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/main_text_color"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_below="@id/ll_top"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="7.5dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/main_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_name_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:paddingTop="4dp"
            android:text="--"
            android:textColor="@color/sub_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_sell_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_green_round_bg"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text="--  --X"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name_des"
            android:layout_alignParentRight="true"
            android:text="@string/rate_return"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_income_rate_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_income"
            android:layout_alignRight="@id/tv_income"
            android:layout_marginTop="10dp"
            android:text="----"
            android:textColor="@color/red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_build_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_name_des"
            android:layout_marginRight="63dp"
            android:layout_toLeftOf="@id/tv_income"
            android:text="@string/opening_price"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_build_value_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_build_value"
            android:layout_alignRight="@id/tv_build_value"
            android:layout_marginTop="10dp"
            android:text="$--"
            android:textColor="@color/main_text_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_below="@id/ll_top"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/tv_income_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收益(BTC)"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_income_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_income_title"
            android:layout_marginTop="2dp"
            android:text="-----"
            android:textColor="@color/main_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="可平仓量"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sell"
            android:layout_alignRight="@id/tv_sell"
            android:layout_marginTop="6dp"
            android:text="--"
            android:textColor="@color/main_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_force_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sell_num"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="强平价格(USD)"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_force_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_force_sell"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:text="--"
            android:textColor="@color/main_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_force_sell"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@id/tv_force_sell"
            android:text="保证金(BTC)"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_security_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_security"
            android:layout_alignRight="@id/tv_security"
            android:layout_marginTop="6dp"
            android:text="--"
            android:textColor="@color/main_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_security"
            android:text="持仓量"
            android:textColor="@color/sub_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_position_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_position"
            android:layout_alignRight="@id/tv_position"
            android:layout_marginTop="6dp"
            android:text="--"
            android:textColor="@color/main_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_sell_btn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_below="@id/tv_force_sell_num"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_blue_round_bg"
            android:gravity="center"
            android:text="@string/close_position"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_setting_security_btn"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/tv_sell_btn"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/tv_sell_btn"
            android:background="@drawable/selector_white_round_bg"
            android:gravity="center"
            android:text="调整保证金"
            android:textColor="@color/blue"
            android:textSize="12sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/position_color_divider" />

</LinearLayout>